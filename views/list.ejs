<%- include('header') %> 

    <div class="box" id="heading">
        <h1> <%= title %> </h1>
    </div>

    <div class="box">
            <% for (item of items) { %>
                <form action="/delete", method="post">
                    <div class="item">
                        <input name="item" value="<%= item._id %>" type="checkbox" onchange="this.form.submit()">
                        <p> <%= item.name %> </p>
                    </div>
                </form>
            <% } %>
    </div>
    
    <div class="box">
        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= title %>>+</button>
        </form>
    </div>

<%- include('footer') %>